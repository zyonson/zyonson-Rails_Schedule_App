<h2>スケジュール編集</h2>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/error",obj:@post %>

<%= form_with model: @post do |f| %>
    <table>
        <tr>
            <th><%= f.label :title,"タイトル" %></th>
            <td><%= f.text_field :title, :size=>"40" %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date,"開始日" %></th>
            <td><%= f.date_field :start_date %></td>
        </tr>
        <tr>
            <th><%= f.label :end_date,"終了日" %></th>
            <td><%= f.date_field :end_date %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day,"終日" %></th>
            <td>
                <%= f.check_box :all_day %>
                終日の場合はチェックを入れます
            </td>
        </tr>
        <tr>
            <th><%= f.label :memo,"スケジュールメモ" %></th>
            <td class = "posts-content"><%= f.text_area :memo, :size=>"40x10" %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%=f.submit "スケジュールを更新する" %></li>
            <li><%= link_to "スケジュール一覧に戻る",:posts %></li>
        </ul>
    </div>
<% end %>

